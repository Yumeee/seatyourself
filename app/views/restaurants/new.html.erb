<h2>Create New Restaurants</h2>

<%=form_for @restaurant do |f| %>
<p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :phone_number %><br>
  <%= f.text_field :phone_number %>
</p>
<p>
  <%= f.label :capacity %><br>
  <%= f.text_field :capacity %>
</p>
<p>
  <%= f.label :address %><br>
  <%= f.text_field :address %>
</p>



<p>
   <%= f.submit "Save" %>
 </p>

 <% end %>
<%= link_to 'Back', restaurants_path %>
